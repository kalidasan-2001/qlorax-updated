[flake8]
# Flake8 configuration for QLORAX project
# Balance between code quality and practical research development

# Line length compatible with Black formatter
max-line-length = 88

# Extend ignore list for practical research code
# E203: Whitespace before ':' (conflicts with Black)
# W503: Line break before binary operator (Black compatibility)  
# F401: Module imported but unused (common in research code)
# F841: Local variable assigned but never used (common in prototyping)
# F541: f-string is missing placeholders (common in logging/debug)
# W291: Trailing whitespace (Black will handle this)
# W293: Blank line contains whitespace (Black will handle this)
# F824: Undefined name in global statement
extend-ignore = E203,W503,F401,F841,F541,W291,W293,F824

# Exclude directories and files
exclude = .git,__pycache__,.venv,venv,.eggs,*.egg,.pytest_cache,.mypy_cache,build,dist

# Per-file ignores for specific patterns
# Test files can have longer lines and unused imports
# Setup and config files
# Scripts can have research-style patterns
# Root demo files can have longer lines for demonstration purposes
per-file-ignores =
    test_*.py: E501, F401, F841,
    setup.py: F401,
    scripts/*: F401, F841, E501, F541,
    *.py: E501, C901
    
# Limit complexity
max-complexity = 15

# Show source code for errors
show-source = true